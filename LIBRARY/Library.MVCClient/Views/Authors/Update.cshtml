@using Library.Models;

@model Author
@{
    ViewBag.Title = "Update an Author";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Update", "Authors", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Id, "Author ID*", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @value = "book ID" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Name, "Name", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @value = "Title" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.YearOfBirth, "Year of Birth", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.YearOfBirth, new { @class = "form-control", @value = "qwerty", @type = "author ID" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Gender, "Gender", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Gender, new { @class = "form-control", @value = "qwerty", @type = "author ID" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn  btn-primary" value="Update" />
        </div>
    </div>
}