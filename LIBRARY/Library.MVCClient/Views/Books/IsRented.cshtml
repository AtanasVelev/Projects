@using Library.Models;

@model Book
@{
    ViewBag.Title = "Is It Rented?";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("IsRented", "Books", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))

{@Html.AntiForgeryToken()
<div class="form-group">
    @Html.LabelFor(m => m.Id, "Book ID *", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control"})
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" class="btn  btn-primary" value="Get" />
    </div>
</div>

}